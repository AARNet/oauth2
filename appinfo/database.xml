<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*oauth2_clients</name>
        <declaration>
            <field>
                <name>client_id</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>80</length>
            </field>

            <field>
                <name>name</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>80</length>
            </field>

            <field>
                <name>client_secret</name>
                <type>text</type>
                <length>80</length>
            </field>

            <field>
                <name>redirect_uri</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>2000</length>
            </field>

            <field>
                <name>grant_types</name>
                <type>text</type>
                <length>80</length>
            </field>

            <field>
                <name>scope</name>
                <type>text</type>
                <length>100</length>
            </field>

            <field>
                <name>user_id</name>
                <type>text</type>
                <length>80</length>
            </field>
        </declaration>
    </table>

    <table>
        <name>*dbprefix*oauth2_access_tokens</name>
        <declaration>
            <field>
                <name>access_token</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>40</length>
            </field>

            <field>
                <name>client_id</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>80</length>
            </field>

            <field>
                <name>user_id</name>
                <type>text</type>
                <length>255</length>
            </field>

            <field>
                <name>expires</name>
                <type>timestamp</type>
                <notnull>true</notnull>
            </field>

            <field>
                <name>scope</name>
                <type>text</type>
                <length>255</length>
            </field>

        </declaration>
    </table>

    <table>
        <name>*dbprefix*oauth2_authorization_codes</name>
        <declaration>
            <field>
                <name>authorization_code</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>40</length>
            </field>

            <field>
                <name>client_id</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>80</length>
            </field>

            <field>
                <name>user_id</name>
                <type>text</type>
                <length>255</length>
            </field>

            <field>
                <name>redirect_uri</name>
                <type>text</type>
                <length>2000</length>
            </field>

            <field>
                <name>expires</name>
                <type>timestamp</type>
                <notnull>true</notnull>
            </field>

            <field>
                <name>scope</name>
                <type>text</type>
                <length>2000</length>
            </field>

        </declaration>
    </table>

    <table>
        <name>*dbprefix*oauth2_refresh_tokens</name>
        <declaration>
            <field>
                <name>refresh_tokens</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>40</length>
            </field>

            <field>
                <name>client_id</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>80</length>
            </field>

            <field>
                <name>user_id</name>
                <type>text</type>
                <length>255</length>
            </field>

            <field>
                <name>expires</name>
                <type>timestamp</type>
                <notnull>true</notnull>
            </field>

            <field>
                <name>scope</name>
                <type>text</type>
                <length>2000</length>
            </field>
        </declaration>
    </table>

    <table>
        <name>*dbprefix*oauth2_scopes</name>
        <declaration>
            <field>
                <name>scope</name>
                <type>text</type>
            </field>

            <field>
                <name>is_default</name>
                <type>boolean</type>
            </field>

        </declaration>
    </table>
</database>
